@model IEnumerable<AdminPanel.Models.Tour>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Просмотр туров
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-home"></i> Домой</a></li>
        <li class="active"><i class="fa fa-plane"></i> Туры</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Туры</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Ajax.BeginForm("TourTable", new AjaxOptions { UpdateTargetId = "results", HttpMethod = "post" }))
                    {
                        <div class="row seach-tours">

                            <div class="col-sm-3">
                                <input type="text" required class="form-control" name="fromCity" placeholder="Откуда: город">
                            </div>

                            <div class="col-sm-3">
                                <input type="text" required class="form-control" name="toWhere" placeholder="Куда: cтрана, регион, город">
                            </div>

                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="startDate" placeholder="Дата вылета">
                            </div>

                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="days" placeholder="Кол-во дней">
                            </div>

                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-info pull-right">Найти</button>
                            </div>

                        </div>
                    }


                    <div id="results">
                        @Html.Partial("TourTable")
                    </div>

                </div>

                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
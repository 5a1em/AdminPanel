@model IEnumerable<AdminPanel.Models.Tour>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Просмотр туров
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-home"></i> Домой</a></li>
        <li class="active"><i class="fa fa-plane"></i> Туры</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Туры</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-horizontal" method="post" action="/Home/List">
                        <div class="row">

                            <div class="form-group">
                                <div class="col-sm-3" style="margin-bottom: 5px;">
                                    <input type="text" class="form-control" name="fromCity" placeholder="Откуда: город">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-3" style="margin-bottom: 5px;">
                                    <input type="text" class="form-control" name="toWhere" placeholder="Куда: cтрана, регион, город">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-2" style="margin-bottom: 5px;">
                                    <input type="text" class="form-control" name="startDate" placeholder="Дата вылета">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-2" style="margin-bottom: 5px;">
                                    <input type="text" class="form-control" name="days" placeholder="Кол-во дней">
                                </div>
                            </div>

                            <div class="col-sm-2" style="margin-bottom: 5px;">
                                <button type="submit" class="btn btn-info pull-right">Найти</button>
                            </div>

                        </div>
                    </form>

                    <table id="example" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Откуда</th>
                                <th>Куда</th>
                                <th>Дата вылета</th>
                                <th>Кол-во дней</th>
                                <th>Цена</th>
                            </tr>
                        </thead>

                        <tbody id="table-body">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.City.Name)</td>
                                    <td>@string.Format("{0} - {1} - {2}", @item.City1.Region.Country.Name, @item.City1.Region.Name, @item.City1)</td>
                                    <td>@item.StartDate.ToShortDateString()</td>
                                    <td>@item.EndDate.ToShortDateString()</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price) руб.</td>
                                </tr>
                            }
                        </tbody>

                    </table>


                </div>

                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/wwwroot/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/wwwroot/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
    $(function () {
        $('#example').DataTable();
    });
</script>